<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/settingsLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.adam.eventsreminder.SettingsActivity">

    <TextView
        android:id="@+id/blueTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/redColorChangeSeekBar"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:layout_toStartOf="@+id/settingsTitleTextView"
        android:text="Blue"
        android:textSize="19sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.026"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/greenTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/redColorChangeSeekBar"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:layout_toStartOf="@+id/settingsTitleTextView"
        android:text="Green"
        android:textSize="19sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.028"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.606" />

    <TextView
        android:id="@+id/settingsTitleTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="Settings"
        android:textSize="19sp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintHorizontal_bias="0.501"
        app:layout_constraintVertical_bias="0.014" />

    <TextView
        android:id="@+id/settingWelcomeTextView"
        android:layout_width="122dp"
        android:layout_height="28dp"
        android:layout_alignStart="@+id/settingsBackgroundColorTextView"
        android:layout_below="@+id/settingsTitleTextView"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:text="Welcome text"
        android:textSize="19sp"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBaseline_toBaselineOf="@+id/welcomeTextEditText" />

    <TextView
        android:id="@+id/settingsBackgroundColorTextView"
        android:layout_width="217dp"
        android:layout_height="29dp"
        android:text="Background color"
        android:textSize="19sp"
        android:layout_below="@+id/welcomeTextEditText"
        android:layout_alignStart="@+id/settingsColorChoiceTextView"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintVertical_bias="0.269" />

    <TextView
        android:id="@+id/settingsColorChoiceTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Text Color"
        android:textSize="19sp"
        android:layout_below="@+id/redColorChangeSeekBar"
        android:layout_toStartOf="@+id/settingsTitleTextView"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintHorizontal_bias="0.032"
        app:layout_constraintVertical_bias="0.79" />

    <TextView
        android:id="@+id/redTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/redColorChangeSeekBar"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:layout_toStartOf="@+id/settingsTitleTextView"
        android:text="Red"
        android:textSize="19sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.032"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.395" />

    <EditText
        android:id="@+id/welcomeTextEditText"
        android:layout_width="182dp"
        android:layout_height="39dp"
        android:layout_alignStart="@+id/settingWelcomeTextView"
        android:layout_below="@+id/settingWelcomeTextView"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="0.849"
        app:layout_constraintVertical_bias="0.107" />

    <SeekBar
        android:id="@+id/redColorChangeSeekBar"
        android:layout_width="185dp"
        android:layout_height="22dp"
        android:layout_alignEnd="@+id/settingsBackgroundColorTextView"
        android:layout_alignStart="@+id/settingsBackgroundColorTextView"
        android:layout_below="@+id/settingsBackgroundColorTextView"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintHorizontal_bias="0.715"
        app:layout_constraintVertical_bias="0.394"
        android:max="255"/>

    <SeekBar
        android:id="@+id/blueColorChangeSeekBar"
        android:layout_width="185dp"
        android:layout_height="22dp"
        android:layout_alignEnd="@+id/settingsBackgroundColorTextView"
        android:layout_alignStart="@+id/settingsBackgroundColorTextView"
        android:layout_below="@+id/settingsBackgroundColorTextView"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.715"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:max="255"/>

    <SeekBar
        android:id="@+id/greenColorChangeSeekBar"
        android:layout_width="185dp"
        android:layout_height="22dp"
        android:layout_alignEnd="@+id/settingsBackgroundColorTextView"
        android:layout_alignStart="@+id/settingsBackgroundColorTextView"
        android:layout_below="@+id/settingsBackgroundColorTextView"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.715"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.605"
        android:max="255"/>

    <Spinner
        android:id="@+id/colorTextSelectSpinner"
        android:layout_width="148dp"
        android:layout_height="30dp"
        android:layout_alignStart="@+id/welcomeTextEditText"
        android:layout_below="@+id/settingsColorChoiceTextView"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:popupBackground="@android:color/darker_gray"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.672"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.795"
        tools:layout_editor_absoluteY="422dp" />


</android.support.constraint.ConstraintLayout>
